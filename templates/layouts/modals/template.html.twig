<div class="modal fade" id="adminAddFirmModal" tabindex="-1" aria-labelledby="addFirmModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <form method="post" action="">
        <div class="modal-header bg-secondary text-white">
          <h5 class="modal-title" id="addFirmModalLabel">Add New Firm</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          {# ag: step 1 #}
          <div class="mb-3">
            <label for="firmName" class="form-label">Firm Name</label>
            <input type="text" class="form-control" name="firm_name" id="firmName" required>
          </div>

          <div class="mb-3">
            <label for="accountName" class="form-label">Firm Account Name</label>
            <input type="text" class="form-control" name="account_name" id="accountName" required>
          </div>

          <div class="mb-3">
            <label for="phone" class="form-label">Phone</label>
            <input type="tel" class="form-control" name="phone" id="phone">
          </div>

          {# You can also add dropdowns for plan, timezone, etc #}
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary">Save Firm</button>
        </div>
      </form>
    </div>
  </div>
</div>
