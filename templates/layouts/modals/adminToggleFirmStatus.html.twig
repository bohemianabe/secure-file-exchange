<div class="modal fade" id="adminToggleFirmStatusModal" tabindex="-1" aria-labelledby="adminToggleFirmStatusModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <div method="post" action="">
        <div class="modal-header bg-secondary text-white">
          <h5 class="modal-title" id="adminToggleFirmStatusModalLabel"></h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <div class="text-center">
            {% if firm.getActive() is true %}
                <p class="mt-3">Deactivating this firm will remove them from login access. Do you wish to continue?</p>
            {% else %}
                <p class="mt-3">Activate Firm. Do you wish to continue?</p>
            {% endif %}
          </div>

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <a type="submit" href="{{ path('admin_toggle_firm_status', { firm: firm.getId() })}}" class="btn {% if firm.getActive() is true %}btn-danger{% else %}btn-primary{% endif %} admin-deactivate-firm" id="admin-add-primary-user">
            {% if firm.getActive() is true %}Deactivate{% else %}Activate{% endif %}
        </a>
        </div>
      </div>
    </div>
  </div>
</div>
