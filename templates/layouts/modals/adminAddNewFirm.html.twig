<div class="modal fade" id="adminAddFirmModal" tabindex="-1" aria-labelledby="addFirmModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg modal-dialog-centered">
    <div class="modal-content">
      <form method="post" action="">
        <div class="modal-header bg-secondary text-white">
          <h5 class="modal-title" id="addFirmModalLabel">Add New Firm</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          {# ag: step 1 #}
          <div class="step" id="step1">

            <div class="container">
              <div class="row">
                <div class="mb-3 col-6">
                  <label for="firmName" class="form-label">Firm Name</label>
                  <input type="text" class="form-control" name="name" id="firmName" required>
                </div>

                <div class="mb-3 col-6">
                  <label for="accountName" class="form-label">Firm Account URL<small>(one word, all lowercase)</small></label>
                  <span data-bs-toggle="tooltip" data-bs-placement="top" title="Dedicated URL path. Ex: www.securefilelogin.com/abcaccountants/login.">
                    <small><i class="fas fa-question-circle"></i></small> 
                  </span>
                  <input type="text" class="form-control" name="accountName" id="accountName" required>
                </div>
              </div>
            </div>

            <div class="container mb-3">
              <div class="row">
                <div class="mb-3 col-12">
                  <label for="storagePlan" class="form-label">Storage Plan</label>
                  <select class="form-select" name="storagePlan" aria-label="Default select example">
                    {% for plan in storage_plans %}
                      <option value="{{ plan.id }}">{{ plan.name|capitalize }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
            </div>

            <div class="container mb-3">
              <div class="row">
                <div class="mb-3 col-6">
                  <label for="addr1" class="form-label">Address 1</label>
                  <input type="text" class="form-control" name="addr1" id="addr1" required>
                </div>

                <div class="mb-3 col-6">
                  <label for="addr2" class="form-label">Address 2</label>
                  <input type="text" class="form-control" name="addr2" id="addr2">
                </div>
              </div>
            </div>

            <div class="container mb-3">
              <div class="row">
                <div class="mb-3 col-6">
                  <label for="city" class="form-label">City</label>
                  <input type="text" class="form-control" name="city" id="city" required>
                </div>

                <div class="mb-3 col-6">
                  <label for="state" class="form-label">State</label>
                  <select class="form-select" name="state" aria-label="Default select example">
                    {% for state in states %}
                      <option value="{{ state.id }}">{{ state.name|capitalize }}</option>
                    {% endfor %}
                  </select>
                </div>
              </div>
            </div>

            <div class="container mb-3">
              <div class="row">
                <div class="mb-3 col-6">
                  <label for="zip" class="form-label">Postal Code</label>
                  <input type="text" class="form-control" name="zip" id="zip" required>
                </div>

                <div class="mb-3 col-6">
                  <label for="country" class="form-label">Country</label>
                  <input value="USA" type="text" class="form-control" name="country" id="country" disabled>
                </div>
              </div>
            </div>

            <div class="container mb-3">
              <div class="row">
                <div class="mb-3 col-6">
                  <label for="phone" class="form-label">Phone</label>
                  <input type="text" class="form-control" name="phone" id="phone" required>
                </div>

                <div class="mb-3 col-6">
                  <label for="logo" class="form-label">Company Logo</label>
                  <span data-bs-toggle="tooltip" data-bs-placement="top" title="Please upload a high res png file with a clear background.">
                    <small><i class="fas fa-question-circle"></i></small> 
                  </span>
                  <input type="file" class="form-control" name="logo" id="logo">
                </div>
              </div>
            </div>

          </div>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
          <button type="submit" class="btn btn-primary slide-user-btn">Add User<i class="fas fa-caret-right"></i></button>
        </div>
      </form>
    </div>
  </div>
</div>
