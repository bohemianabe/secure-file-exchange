<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    {# ag: site flavicon #}
    <link rel="icon" href="{{ asset('images/secure-file-color.svg') }}">
    {# Bootstrap 5 via CDN ag: also list it before your custom css so it will override bootstrap #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles/site-wide-styling.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/theme.css') }}">
    {# base.html.twig #}

  <title>{% block title %}{{ app_name }}{% endblock %}</title>


  {% block styles %}{% endblock %}
</head>
<body class="min-vh-100 d-flex flex-column bg-light" style="background-image: url('{{ asset('images/stack-of-files.jpg' )}}'); background-size:cover;position:relative;">
    <div class="login-overlay" style="position: absolute; inset: 0; background-color: rgba(0, 0, 0, 0.4);"></div>

    <main class="flex-grow-1 d-flex align-items-center justify-content-center py-5">
        <div class="card shadow-lg" style="max-width:440px;width:100%;">
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

                    <div class="text-center m-4">
                        <img src="{{ asset('images/secure-file-color.png') }}" style="height:10rem;width:auto;" >
                    </div>
                    <div class="card-body p-4">
                        <h1 class="h4 mb-4 text-center">{{ app_name }}</h1>

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    <form method="post" action="{{ path('app_login') }}">
                    <div class="mb-3">
                        <label class="form-label" for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
                    </div>

                    <div class="mb-3 position-relative">
                        <label class="form-label" for="inputPassword">Password</label>
                        <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                        <div class="mb-3">
                            <a href="{{ path('app_forgot_password_request') }}">Forgot Password?</a>
                        </div>

                          {# <button type="button" id="togglePassword" class="btn btn-sm btn-outline-secondary position-absolute end-0 top-0 mt-2 me-2" tabindex="-1">
                            <i class="fas fa-eye"></i>
                        </button> #}
                    </div>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                        <div class="checkbox mb-3">
                            <input type="checkbox" name="_remember_me" id="_remember_me">
                            <label for="_remember_me">Remember me</label>
                        </div>


                        <button class="btn btn-primary w-100">Sign in</button>
                    </form>
        </div>
    </main>

    <footer class="text-center pb-4">
        ©  {{ "now"|date("Y") }} <a href="https://www.abelwebdevelopment.com/" target="_blank" rel="nofollow noopener">Abel Web Development</a> — All Rights Reserved.<br>
        Application Built By Abel Web Development
    </footer>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  {% block javascripts %}{% endblock %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
</body>
</html>





