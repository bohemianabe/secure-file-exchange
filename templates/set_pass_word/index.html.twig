{# {% extends 'base.html.twig' %}

{% block title %}Hello SetPassWordController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>

    This friendly message is coming from:
    <ul>
        <li>Your controller at <code>/var/www/html/src/Controller/SetPassWordController.php</code></li>
        <li>Your template at <code>/var/www/html/templates/set_pass_word/index.html.twig</code></li>
    </ul>
</div>
{% endblock %} #}

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    {# ag: site flavicon #}
    <link rel="icon" href="{{ asset('images/secure-file-color.svg') }}">
    {# Bootstrap 5 via CDN ag: also list it before your custom css so it will override bootstrap #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('styles/site-wide-styling.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/theme.css') }}">
    {# base.html.twig #}


    {% block styles %}{% endblock %}
    <title>{% block title %}Reset your password{% endblock %}</title>
</head>

{% block body %}

<body class="min-vh-100 d-flex flex-column bg-light" style="background-image: url('{{ asset('images/stack-of-files.jpg' )}}'); background-size:cover;position:relative;">
    <div class="login-overlay" style="position: absolute; inset: 0; background-color: rgba(0, 0, 0, 0.4);"></div>


        <main class="flex-grow-1 d-flex align-items-center justify-content-center py-5">
            <div class="card" style="max-width:440px;width:100%;">
                <div class="text-center m-4">
                    <img src="{{ asset('images/secure-file-color.png') }}" style="height:10rem;width:auto;" >
                </div>
                <div class="card-body p-4">
                    <h1 class="h4 mb-4 text-center">Set your password</h1>
                        <div class="mb-3">
                            {{ form_start(resetForm) }}
                                {{ form_row(resetForm.plainPassword) }}
                                <div class="text-center mt-3">
                                    <button class="btn btn-primary">Set password</button>
                                </div>
                            {{ form_end(resetForm) }}

                        </div>
                </div>
            </div>
        </main>
        <footer class="text-center pb-4">
            ©  {{ "now"|date("Y") }} <a href="https://www.abelwebdevelopment.com/" target="_blank" rel="nofollow noopener">Abel Web Development</a> — All Rights Reserved.<br>
            Application Built By Abel Web Development
        </footer>

    </div>
</body>

{% endblock %}

